<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpperFragment">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="Enter a word then hit submit"
        />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:columnCount="4"
        android:rowCount="4">
        <Button
            android:id="@+id/row0_col0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row0_col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row0_col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row0_col3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>

        <Button
            android:id="@+id/row1_col0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row1_col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row1_col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row1_col3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            tools:ignore="UsingOnClickXml"
            android:onClick="tapOnLetter"/>

        <Button
            android:id="@+id/row2_col0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row2_col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row2_col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row2_col3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>

        <Button
            android:id="@+id/row3_col0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row3_col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row3_col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
        <Button
            android:id="@+id/row3_col3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/a"
            android:onClick="tapOnLetter"/>
    </GridLayout>


    <TextView
        android:id="@+id/inputWord"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:textSize="48sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btuClear"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/clear"
            android:onClick="onClear"/>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            android:onClick="onSubmit"/>
    </LinearLayout>

</LinearLayout>
